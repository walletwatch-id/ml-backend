{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekends",
    ":semanticCommits",
    ":pinAllExceptPeerDependencies"
  ],
  "stabilityDays": 7,
  "baseBranches": [
    "develop"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:weekends"
    ],
    "automerge": true,
    "automergeStrategy": "fast-forward",
    "labels": [
      "dependencies"
    ]
  },
  "packageRules": [
    {
      "groupName": "python dependencies",
      "matchManagers": [
        "poetry",
        "dockerfile"
      ],
      "matchDepNames": [
        "python"
      ],
      "labels": [
        "dependencies"
      ]
    },
    {
      "groupName": "non-major dependencies",
      "matchManagers": [
        "poetry"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "excludeDepNames": [
        "python"
      ],
      "automerge": true,
      "automergeStrategy": "fast-forward",
      "labels": [
        "dependencies"
      ]
    },
    {
      "groupName": "major dependencies",
      "matchManagers": [
        "poetry"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "excludeDepNames": [
        "python"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "labels": [
        "dependencies",
        "github actions"
      ]
    }
  ]
}
